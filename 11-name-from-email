public String nameFromEmail(String email) {
    String name = email;
    name = name.substringBefore('.');
    system.Debug(name);
    name = name.subtringBetween('.','@');
    system.Debug(name);
    name = name.toLowerCase();
    system.Debug(name);
    name = name.capitalize();
    system.Debug(name);
    return name;
}