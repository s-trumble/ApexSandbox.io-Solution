public Integer nextPrime(Integer num) {
    //code here
    if (num < 2){
        return 2;
    }

    Integer nextPrime = num + 1;
    while (isPrime=false(nextPrime)){
        nextPrime += 1;
    }
    return nextPrime;  
}      
public Boolean isPrime(Integer nextPrime){
    for (Integer i =2; i < nextPrime; i++){
        if (Math.mod(nextPrime,i)==0){
            return false;
        }
    }
    return true;
}
